<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7da00"
    tools:context="com.radiumdigital.meggnify.megg.MeggnifyActivity$AssignmentMissionFragment" >
    
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/padding"
        android:scrollbarStyle="outsideOverlay" >
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding"
            android:background="#ffffff"
            android:orientation="vertical">
            
            <TextView
                android:id="@+id/mission_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Lorem ipsum"
                android:textSize="24sp" />
            
            <TextView
                android:id="@+id/mission_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Lorem ipsum"
                android:textSize="12sp" />
            
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp" >
                
                <RelativeLayout
                    android:id="@+id/type_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:padding="4dp">
                    
                    <ImageView 
                        android:id="@+id/mission_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginBottom="4dp"
                        android:layout_centerHorizontal="true"
                        android:contentDescription="Icon"/>
                    
                    <TextView
                        android:id="@+id/mission_type"
                        android:layout_below="@id/mission_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lorem ipsum"
                        android:textSize="10sp" />
                    
                </RelativeLayout>
                
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@id/type_container"
                    android:padding="4dp">
                    
                    <TextView
                        android:id="@+id/mission_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:text="123"
                        android:textSize="16sp" />
                    
                    <TextView
                        android:layout_below="@id/mission_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Count"
                        android:textSize="10sp" />
                    
                </RelativeLayout>
                
                <RelativeLayout 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:padding="4dp"
                    android:background="#333333">
                    
                    <TextView
                        android:id="@+id/mission_end_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00:00"
                        android:textSize="24sp"
                        android:textColor="#ffffff" />
                    
                    <TextView
                        android:id="@+id/mission_end_date"
                        android:layout_toRightOf="@id/mission_end_time"
                        android:layout_width="24dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:gravity="center"
                        android:text="12 Dec 2014"
                        android:textSize="8sp"
                        android:textColor="#ffffff" />
                    
                </RelativeLayout>
                
            </RelativeLayout>
            
            <TextView
                android:id="@+id/mission_cost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="$00.00"
                android:textSize="28sp"
                android:textColor="#00ac32" />
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Instruction" />
            
            <TextView
                android:id="@+id/mission_objective"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum." />
            
            <LinearLayout 
                android:id="@+id/action_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />
            
        </LinearLayout>
    
    </ScrollView>

</RelativeLayout>
