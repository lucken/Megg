<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7da00"
    tools:context="com.radiumdigital.meggnify.megg.MeggnifyActivity$AssignmentFragment" >
    
    <LinearLayout 
        android:id="@+id/action"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding">
        
        <Button
            android:id="@+id/button_my_job"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="My Jobs"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:background="#9a62b3" />
        
        <Button
            android:id="@+id/button_new_job"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:text="New Jobs"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:background="#00a3cb" />
        
        <Button
            android:id="@+id/button_map"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Map"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:background="#e76297" />
        
    </LinearLayout>
    
    <FrameLayout
        android:id="@+id/assignment_container"
        android:layout_above="@id/action"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>
