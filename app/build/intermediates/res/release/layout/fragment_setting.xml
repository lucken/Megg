<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7da00"
    android:gravity="center"
    android:padding="@dimen/padding"
    tools:context="com.radiumdigital.meggnify.megg.MeggnifyActivity$SettingFragment" >
    
    <ImageView
        android:id="@+id/image" 
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginBottom="16dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="Image" />
    
    <LinearLayout 
        android:layout_below="@id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding"
        android:orientation="vertical"
        android:background="#ffffff">
        
        <TextView 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Notifications"
            android:layout_marginBottom="8dp" />
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:padding="8dp"
            android:background="#000000"
            android:orientation="vertical" >
            
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ringer"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />
            
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Audio alert on incoming new assignments"
                android:textColor="#ffffff"
                android:textSize="12sp" />
            
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="#000000"
            android:orientation="vertical" >
            
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Popup Screen"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />
            
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Visual alert on incoming new assignments"
                android:textColor="#ffffff"
                android:textSize="12sp" />
            
        </LinearLayout>
        
    </LinearLayout>

</RelativeLayout>
