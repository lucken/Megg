<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="#9a62b3" >
    
    <ImageView
        android:id="@+id/mission_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:contentDescription="Icon" />
    
    <LinearLayout
        android:id="@+id/mission_datetime"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="vertical" >
        
        <TextView
            android:id="@+id/mission_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="2dp"
            android:text="00:00"
            android:textColor="#ffffff" />
        
        <TextView
            android:id="@+id/mission_end_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="01/01/2014"
            android:textColor="#ffffff"
            android:textSize="8sp" />
        
    </LinearLayout>
    
    <TextView
        android:id="@+id/mission_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_toRightOf="@id/mission_icon"
        android:layout_toLeftOf="@id/mission_datetime"
        android:gravity="center"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:text="Lorem ipsum" />

</RelativeLayout>
