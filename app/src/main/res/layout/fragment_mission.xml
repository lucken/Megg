<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7da00"
    tools:context="com.radiumdigital.meggnify.MissionActivity$MissionFragment" >
    
    <LinearLayout 
        android:id="@+id/action_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="@dimen/padding">
        
        <Button
            android:id="@+id/submit_mission"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="Submit"
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:background="#a3cd25" />
        
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/instruction_container"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding"
        android:orientation="vertical">
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="Complete checklist by clicking on each tab to reveal questions and tasks details. Do make sure every tab is filled before submitting." />
            
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding"
            android:background="#ffffff"
            android:orientation="vertical">
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="Instruction" />
            
            <TextView
                android:id="@+id/mission_instruction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua." />
            
        </LinearLayout>
        
    </LinearLayout>
    
    <ListView
        android:id="@+id/list_task"
        android:layout_above="@id/action_container"
        android:layout_below="@id/instruction_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding"
        android:scrollbarStyle="outsideOverlay" />

</RelativeLayout>
